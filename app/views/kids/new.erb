<div class="col-md-8">
  <h1>New Kid</h1>

  <!-- put form for making a new kid here -->
  <form action="/kids" method="POST" class="form">
    <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control" name="kid[name]">
    </div>
    <div class="form-group">
      <label>Age</label>
      <input type="number" class="form-control" name="kid[age]">
    </div>
    <div class="form-group">
      <label>Feeling</label>
      <input type="text" class="form-control" name="feeling">
    </div>
    <input type="submit" value="Add Kid" class="btn btn-default">
  </form>
</div>

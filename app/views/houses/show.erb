<div class="col-md-8">
  <h1><%= @house.address %></h1>

  <!-- show the address here -->


  <!-- iterate through unclaimedcandies here -->
  <h2>Unclaimed Candies</h2>
  <ul>
    <% @house.unclaimed_candies.each do |candy| %>
      <li><%= candy.name %></li>
    <% end %>
  </ul>

  <!-- put the trick-or-treat form here, you'll be subitting kid_id -->
  <h2>Trick-Or-Treat</h2>
  <form action="/houses/<%= @house.id %>/trick-or-treat" method="POST" class="form">
  <% @kids.each do |kid| %>
    <div class="radio">
      <label for="">
        <input type="radio" value="kid_id[<%= kid.id %>]">
        <%= kid.name %>
      </label>
    </div>
  <% end %>
  <input type="submit" class="btn btn-default">
  </form>
  <!-- link to this house's edit page here -->  
</div>

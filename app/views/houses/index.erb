<div class="col-md-8">
  <h1>All Houses</h1>

  <!-- iterate through houses and their candies here -->
  <%  @houses.each do |house| %>
    <h3><a href="/houses/<%= house.id %>"><%= house.address %></a></h3>
    <h4>Unclaimed Candy</h4>
    <ul>
      <% house.unclaimed_candies.each do |candy| %>
        <li><%= candy.name %></li>
      <% end %>
    </ul>
  <% end %>  
</div>
